/* CSS declarations go here */

body, html
    position:relative
    height:100%
    width:100%
    margin: 0
    padding: 0
    //background: black
    font-size: 12px

h4
    font-size: 17px

.screen
    position:relative
    height:100%
    width: 100%

.player
    position: absolute
    width: 150px
    height: 200px
    bottom: 230px
    left: 40%
    background-image: url(skeltw2.gif)
    z-index: 100

.ground
    position: absolute
    width:100%
    height:225px
    bottom:0
    background: url(ground.jpg) repeat 5% 5%
    box-shadow: inset 0px 10px 16px rgba(0,0,0,0.5), 0px -10px 34px rgba(0,0,0,0.5);

.ground-on
    position: absolute
    width:100%
    height:85px
    bottom:195px
    background: url(ground.jpg) repeat 5% 5%
    z-index: 5
    transform: rotateX(70deg);

    &:before
        content: "";
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0,0,0, 0.5);

.biome-bg
    position:absolute
    height:100%
    width:100%

.forest-bg
    background-image: url(deepforest.jpg)

.float
    overflow:hidden

.left
    float:left

button
    border: 2px solid rgba(0,0,0,0.5)
    border-radius: 2px
    margin: 3px
    background: transparent

    &:hover
        background: rgba(0,0,0,0.5)
        transition: 0.1s
        color: white

ul
    list-style:none
    padding: 5px

.list
    padding: 5px

.itemlink:before
    content:"["

.itemlink:after
    content:"]"

.junk
    color: gray
.material
    color: chocolate
.consumable
    color: lightblue
.weak
    color: brown
.sturdy
    color: darkorange
.terrific
    color: red
.exemplary
    color: purple


.action
    display: block

.map
    border-spacing: 0;

    .map-row
        .loc
            height: 10px
            width: 10px
            text-align: center

            span
                font-size: 10px

        .forest
            background: green

        .mountains
            background: gray

        .lake
            background: blue
