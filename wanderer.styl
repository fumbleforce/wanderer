/* CSS declarations go here */

body, html
    position:relative
    height:100%
    width:100%
    margin: 0
    padding: 0
    //background: black

.screen
    position:relative
    height:100%
    width: 100%

.player
    position: absolute
    width: 150px
    height: 200px
    bottom: 230px
    left: 40%
    background-image: url(skeltw2.gif)
    z-index: 100

.ground
    position: absolute
    width:100%
    height:225px
    bottom:0
    background: url(ground.jpg) repeat 5% 5%
    box-shadow: inset 0px 10px 16px rgba(0,0,0,0.5), 0px -10px 34px rgba(0,0,0,0.5);

.ground-on
    position: absolute
    width:100%
    height:85px
    bottom:195px
    background: url(ground.jpg) repeat 5% 5%
    z-index: 5
    transform: rotateX(70deg);

    &:before
        content: "";
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0,0,0, 0.5);

.biome-bg
    position:absolute
    height:100%
    width:100%

.forest-bg
    background-image: url(deepforest.jpg)
    
.float
    overflow:hidden
    
.left
    float:left