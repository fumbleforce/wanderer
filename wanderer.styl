/* CSS declarations go here */

*
    box-sizing: border-box

body, html
    position:relative
    height:100%
    width:100%
    margin: 0
    padding: 0
    //background: black
    font-size: 12px
    font-family: 'Roboto', sans-serif
    font-smoothing: antialiased
    text-shadow: 1px 1px 1px rgba(0,0,0,0.004)

h4
    font-size: 17px
    margin: 5px 0



.loading-screen
    width: 100%
    height: 100%
    background: darkslategray
    position: relative

    h1
        width: 100%
        text-align: center
        top: 45%
        position:absolute
        color: white
        font-size: 50px

        .loading-icon
            animation-name: spin;
            animation-duration: 4000ms;
            animation-iteration-count: infinite;
            animation-timing-function: linear;

.screen
    position:relative
    height:100%
    width: 100%

.bg
    width: 100%
    height: 100%
    position: fixed

.gui-container
    //width: 1200px
    background: silver
    margin: 0 auto
    overflow:hidden
    width:100%
    magin-bottom: 30px
    
    .half
        width: 50%

    .gui-main, .gui-nav, .gui-window, .menu, .gui-chat
        color: white;
        background-color: rgba(50,50,50,0.8);
        border-radius: 0;
        position: relative

    .gui-chat
        padding:0.5%
        width:50%
        float:left
        height:100%

    .gui-nav
        width: 100%
        padding: 5px
        margin: 0
        height: 5%
        overflow: hidden

        button
            width: auto
            float:left
            

    .gui-main
        //width: 1180px
        float: left
        padding: 10px
        height: 100%
        width: 50%
        margin: 0
        overflow-y: auto

    .gui-window
        min-height: 200px
        min-width: 200px
        padding: 10px
        margin: 10px



.ground
    position: absolute
    width:100%
    height:225px
    bottom:0
    background: url(ground.jpg) repeat 5% 5%
    box-shadow: inset 0px 10px 16px rgba(0,0,0,0.5), 0px -10px 34px rgba(0,0,0,0.5);

.ground-on
    position: absolute
    width:100%
    height:85px
    bottom:195px
    background: url(ground.jpg) repeat 5% 5%
    z-index: 5
    transform: rotateX(70deg);

    &:before
        content: "";
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0,0,0, 0.5);

.float
    overflow:hidden

.left
    float:left

.right
    float:right

ul
    list-style:none
    padding: 5px


.bg-town
    background-image: url(/town.jpg) !important
    background-size: cover;
    background-repeat: no-repeat

.bg-navigation
    background-image: url(/navigation.jpg) !important
    background-size: cover;
    background-repeat: no-repeat

.bg-travelling
    background-image: url(/area.jpg) !important
    background-size: cover;
    background-repeat: no-repeat

.bg-camping
    background-image: url(/camp.jpg) !important
    background-size: cover;
    background-repeat: no-repeat

.bg-dungeon
    background-image: url(/dungeon.jpg) !important
    background-size: cover;
    background-repeat: no-repeat

.bg-combat
    background-image: url(/battle.png) !important
    background-size: cover;
    background-repeat: no-repeat


@keyframes spin {
    from {transform:rotate(0deg);}
    to {transform:rotate(360deg);}
}