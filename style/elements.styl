

// Progress bar
.bar-container
    height: 15px
    width: 200px
    margin: 1px
    background: gray
    position:relative
    color:white

    .bar
        height: 15px
        //padding-left: 3px

    span
        position: absolute
        font-size: 12px

    .red
        background: red
        color: white

    .blue
        background: blue
        color: white

    .brown
        background: brown
        color: white




button
    border: 2px solid rgba(0,0,0,0.5)
    border-radius: 2px
    margin: 3px
    background: transparent
    height: 30px

    &:hover
        background: rgba(0,0,0,0.5)
        transition: 0.1s
        color: white
        cursor: pointer


// Items
.itemlink:before
    content:"["

.itemlink:after
    content:"]"

// Skills
.skillLink:before
    content:"<"

.skillLink:after
    content:">"

.skillLink
    color:limegreen


// Spells
.spellLink:before
    content:"("

.spellLink:after
    content:")"

.spellLink
    color: green


.junk
    color: gray
.material
    color: chocolate
.consumable
    color: lightblue
.weak
    color: brown
.sturdy
    color: darkorange
.terrific
    color: red
.exemplary
    color: purple


// Menu actions
.action
    display: block
    width: 200px