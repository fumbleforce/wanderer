
.chat
    box-sizing: border-box;
    position: relative;
    height: 100%;
    flex-shrink: 1;
    flex-grow: 1;
    align-self: stretch;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;
    
    .title
        height: 100%
        display: block
        float:left
        padding-right: 10px

    .messages
        /*
        position: relative;
        background: rgba(0,0,0,0.03);
        width: 100%;
        height: 100%;
        */
        flex-shrink: 1;
        overflow-y: scroll;
        overflow-x: hidden;
        transform: rotate(180deg);
        
        .comment
            transform: rotate(-180deg);
            
        ul
            list-style: none;
            padding:0px;
            margin:0;
        

            li
                padding:1px;
                font-size: 12px;
                word-wrap: break-word;
                transform: rotate(-180deg);
            

                label
                    font-weight: bold;
            
    .writer
        position: relative;
        box-sizing: border-box;
        z-index: 100;
        background-color: white;
        min-height: 70px;
        flex-shrink: 0;
        border-top: 1px solid rgba(0,0,0,.05);
        padding: 0;
        
        .inner
            box-sizing: border-box;
            
            textarea
                display: block;
                width: 100%;
                height:100%
                outline: none;
                line-height: 1.38em;
                margin:0
                border: 0;
                resize: none;
                margin: 0;
                -webkit-box-shadow: none;
                box-shadow: none;
                min-height: 44px;
                font-size: 1em;
                color: black;
                

                position:absolute
                padding: 10px
            

